class Bridge(object):

    def __init__(self, b_id, lans):
        self.b_id = b_id
        self.lans = lans
        self.active_ports = map(self.parse_lan, lans[1:])#{port: destination bridge}
        self.ports = {}             # Maps port number (lan number) to socket object
        self.start = 0 
        self.stop = 0
        self.forwarding_table = {}                              # {"<destination>": "<port>"}
        self.bpdus = {}                                         #{<socket>: {"source" :{"root": "2", "cost": 1, "timestamp": FFF} } }
        self.root = {"id": b_id, "root_port": lans[0], "cost": 0}
        self.connected_bridges = [] ####??????????
        # {"1": {"4": {{"root": 3, "cost": 1, "timestamp": 4}},
